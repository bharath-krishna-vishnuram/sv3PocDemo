@page
@model Trial.MvcDemoApplication.Web.Pages.PDM.Structures.UpdateModalModel
@using Trial.MvcDemoApplication.Localization
@using Trial.MvcDemoApplication.Web.Pages.PDM.TextManager
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@inject IStringLocalizer<MvcDemoApplicationResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="StructureData" asp-page="/PDM/Structures/UpdateModal">
    <abp-modal>
        <abp-modal-header title="@L["Update"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />
            <label>Name</label>
            <select asp-for="StructureData.NameId"
                    class="auto-complete-select"
                    data-autocomplete-api-url="/api/app/text?IsStructure=true"
                    data-autocomplete-display-property="textName"
                    data-autocomplete-value-property="id"
                    data-autocomplete-items-property="items"
                    data-autocomplete-filter-param-name="filter"
                    data-autocomplete-allow-clear="true">
                Structure Name
                <!-- You can define selected option(s) here  -->
                <option selected value="@Model.SelectedStructureName.Value">@Model.SelectedStructureName.Text</option>
            </select>
            <abp-form-content />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>
