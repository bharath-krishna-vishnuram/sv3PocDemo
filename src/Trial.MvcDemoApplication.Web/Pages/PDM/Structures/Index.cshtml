@page
@using Trial.MvcDemoApplication.Web.Pages.Structures
@inject Volo.Abp.AspNetCore.Mvc.UI.Layout.IPageLayout PageLayout

@model IndexModel
@{
    PageLayout.Content.Title = "";
}
@using Trial.MvcDemoApplication.Localization
@using Microsoft.Extensions.Localization

@inject IStringLocalizer<MvcDemoApplicationResource> L

@section scripts
{
    <abp-script src="/Pages/PDM/Structures/Index.js" />
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_6">
                <abp-card-title>@L["PageHeaders:Structures"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_6" class="text-end">
                <abp-button id="NewStructureButton"
                            text="@L["Button:NewStructure"].Value"
                            icon="plus"
                            button-type="Primary" />
            </abp-column>
        </abp-row>

    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="StructuresTable"></abp-table>
    </abp-card-body>
</abp-card>
