@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Trial.MvcDemoApplication.Localization
@using Volo.Abp.Users
@model Trial.MvcDemoApplication.Web.Pages.IndexModel
@inject IHtmlLocalizer<MvcDemoApplicationResource> L
@inject ICurrentUser CurrentUser
@section styles {
    <abp-style src="/Pages/Index.css" />
}
@section scripts {
    <abp-script src="/Pages/Index.js" />
}
<div class="p-5 text-center">
    <div class="d-inline-block bg-success text-white p-1 h5 rounded mb-4 " role="alert">
        <h5 class="m-1"> <i class="fas fa-rocket"></i> @L["WelcomeMessage"] <strong>@L["ApplicationName"]</strong> @L["IsRunning"]</h5>
    </div>
    <h1>@L["WelcomeTitle"]</h1>

    <p class="lead px-lg-5 mx-lg-5">@L["LongWelcomeMessage"]</p>

    @if (!CurrentUser.IsAuthenticated)
    {
        <a abp-button="Primary" href="~/Account/Login"><i class="fa fa-sign-in"></i> @L["Login"]</a>
    }

</div>
<div class="my-3 text-center">
    <h3>@L["GetStartedTitle"]</h3>
    <p>@L["GetStartedDescription"]</p>
</div>

<div class="mt-5 my-3 text-center">
    <h3>@L["MeetAppTitle"]</h3>
    <p>@L["MeetAppDescription"]</p>
</div>
<div class="container">

    <!-- New section: About Us -->
    <div class="my-3 text-center">
        <h3>@L["AboutUsTitle"]</h3>
        <p>@L["AboutUsDescription"]</p>
    </div>

    <!-- New section: Contact Us -->
    <div class="my-3 text-center">
        <h3>@L["ContactUsTitle"]</h3>
        <p>@L["ContactUsDescription"]</p>
        <p>@L["Email"] info@example.com</p>
        <p>@L["Phone"] (123) 456-7890</p>
    </div>

    <!-- New section: Our Services -->
    <div class="my-3 text-center">
        <h3>@L["OurServicesTitle"]</h3>
        <p>@L["OurServicesDescription"]</p>
    </div>

</div>

<!-- New section: Testimonials Tiles -->
<div class="testimonial-container">
    <div class="testimonial">
        <p>@L["Testimonial1Text"]</p>
        <p>@L["Testimonial1Author"]</p>
    </div>
    <div class="testimonial">
        <p>@L["Testimonial2Text"]</p>
        <p>@L["Testimonial2Author"]</p>
    </div>
    <div class="testimonial">
        <p>@L["Testimonial3Text"]</p>
        <p>@L["Testimonial3Author"]</p>
    </div>
    <div class="testimonial">
        <p>@L["Testimonial4Text"]</p>
        <p>@L["Testimonial4Author"]</p>
    </div>
</div>

<!-- New footer section -->
<footer class="footer mt-5 py-3 text-center">
    <p>@L["FooterCopyright"]</p>
</footer>